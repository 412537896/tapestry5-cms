<html t:type="Layout" t:title="Tags"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_4.xsd" xmlns:p="tapestry:parameter">
	<div class="row content">
		<div class="col-sm-8">
			<div class="wrapper wrapper-content animated fadeInRight blog">
				<div class="row">
                <div class="col-lg-12">
                	<t:zone t:id="dataZone" id="dataZone">
					<t:loop source="postss" value="posts">
                    <div class="ibox">
                        <div class="ibox-content">
                            
                                <h2>
                                    <a href="#;" t:type="pagelink" target="_blank" t:page="PostsDetial" t:context="${posts.id}" title="${posts.title}">${posts.title}</a>
                                </h2>
                           
                            <div class="small m-b-xs">
                                <strong class="mar-pixe-r10">${posts.author}</strong> 
                                <span class="text-muted mar-pixe-r10"><i class="fa fa-clock-o"></i> ${posts.timeAgo}</span>
                                <span class="text-muted"><i class="ion-heart"></i> ${posts.countVoter}</span>
                            </div>
                            <p>${posts.subContent}</p>
                            <div class="row">
                                <div class="col-md-6">
                                        <h5>${message:tags-label}:</h5>
                                        <ul class="tag-list" style="padding: 0">
					                        <li><a href=""><i class="fa fa-tag"></i> ${posts.tagName}</a></li>
					                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <div class="small text-right">
                                        <h5>${message:stats-label}:</h5>
                                        <div> <i class="ion-reply"> </i> ${posts.countDiscuss} ${message:discuss-label}</div>
                                        <i class="fa fa-eye"> </i> ${posts.clicks} ${message:views-label}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </t:loop>
						</t:zone>

						
                    
                </div>
                
            </div>
			</div>
			<t:widgets.fpaginate t:source="postss" t:id="plist" t:zone="dataZone" t:pagesize="5"/>
		</div>
		<div class="col-sm-4">
			<t:Side />
		</div>
	</div>
</html>